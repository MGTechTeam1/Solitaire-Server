{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types", "./dist/types"]
  },
  "include": [
    "src/**/*",       // pastikan folder ini termasuk .d.ts
    "src/types/**/*.d.ts"
  ]
}
